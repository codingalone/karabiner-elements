{
  "title": "Make JIS Layout MacBook keyboard more ergonomic",
  "rules": [
    {
      "description": "Remap right hand keys",
      "manipulators": [
        {
          "description": "] -> P",
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "p"
            }
          ]
        },
        {
          "description": "[ -> O",
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "optional": [
                "any"
              ]
          }
          },
          "to": [
            {
              "key_code": "o"
            }
          ]
        },
        {
          "description": "P -> I",
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "i"
            }
          ]
        },
        {
          "description": "O -> U",
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "u"
            }
          ]
        },
        {
          "description": "I -> Y",
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "y"
            }
          ]
        },
        {
          "description": "enter -> quote",
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "quote"
            }
          ]
        },
        {
          "description": "backslash -> semicolon",
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "semicolon"
            }
          ]
        },
        {
          "description": "quote -> L",
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "l"
            }
          ]
        },
        {
          "description": "semicolon -> K",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "k"
            }
          ]
        },
        {
          "description": "L -> J",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "j"
            }
          ]
        },
        {
          "description": "K -> H",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "h"
            }
          ]
        },
        {
          "description": "Right shift -> /",
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "slash"
            }
          ]
        },
        {
          "description": "international1 -> .>",
          "type": "basic",
          "from": {
            "key_code": "international1",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "period"
            }
          ]
        },
        {
          "description": "slash -> ,<",
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "comma"
            }
          ]
        },
        {
          "description": ".> -> M",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "m"
            }
          ]
        },
        {
          "description": ",< -> N",
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "n"
            }
          ]
        }
      ]
    },
    {
      "description": "Use thumbs more",
      "manipulators": [
        {
          "description": "左 Cmd を左 Ctrl にする",
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        },
        {
          "description": "英数キーを左 Opt にする",
          "type": "basic",
          "from": {
            "key_code": "japanese_eisuu",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ]
        },
        {
          "description": "スペースバーを長押しで Left Cmdにする",
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ]
        },
        {
          "description": "かなキーをエンターにする",
          "type": "basic",
          "from": {
            "key_code": "japanese_kana",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "$layer_1",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "$layer_1",
                "value": 0
              }
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 500
          }
        },
        {
          "description": "右Cmd を右 Opt にする",
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "$layer_2",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "$layer_2",
                "value": 0
              }
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 500
          }
        }
      ]
    },
    {
      "description": "Use left hand fingers more efficiently",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
    {
      "description": "Layer",
      "manipulators": [
        {
          "description": "Tab -> Tilde",
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_1",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        },
        {
          "description": "Tab -> Escape; Note: これを Tab -> Tilde の上に持っていったら機能しなくなった。 to_if_alone > to + condition なのか?",
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "description": "Layer1: H -> Left arrow",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_1",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "description": "Layer1: J -> Down arrow",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_1",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "description": "Layer1: K -> Up arrow",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_1",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "description": "Layer1: L -> Right arrow",
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_1",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        },
        {
          "description": "Layer2: G -> [",
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_2",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "open_bracket"
            }
          ]
        },
        {
          "description": "Layer1: H -> ]",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "$layer_2",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "close_bracket"
            }
          ]
        }
      ]
    }
  ]
}
